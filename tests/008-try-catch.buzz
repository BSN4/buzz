import "zig-out/lib/libstd.dylib";

enum(str) MyErrors {
    failed = "Something failed",
    bad = "Something bad",
    ohno = "Oh no!",
}

fun willFail() > num {
    throw MyErrors.failed;
    return 1;
}

test "Error value in catch clause" {
    try {
        willFail();
    } catch (MyErrors error) {
        assert(error == MyErrors.failed, message: "caught the right error");
    }
}