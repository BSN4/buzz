import "zig-out/lib/libstd.dylib";

| fun willThrow() {
|     throw "me around!";
| }

| test "try-catch" {
|     try {
|         willThrow();
|         assert(false, message: "unreachable");
|     } catch {
|         assert(true, message: "error caught");
|     }
| }

test "catch runtime error" {
    [num] list = [1, 2, 3];

    try {
        print(list[100]); | out of bound access
    } catch {
        print("caugh it!");
        assert(true, message: "caught it!");
    }

    | print(list[200]); | out of bound access
}