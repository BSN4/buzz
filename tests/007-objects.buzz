fun assert(bool condition, str message) {
    if (!condition) {
        throw message;
    }
}

object First {
    str name = "Joe";
    num age = 10;

    fun init(str name) {
        print(this.name);
        this.name = name;
    }

    fun sayHello() {
        print("hello");
        print(this.name);
    }
}

test "Objects" {
    First first = First("John");

    assert(first.name == "John", message: "object instance, field access");

    first.age = 21;
    assert(first.age == 21, message: "field assignment");

    first.sayHello();
}