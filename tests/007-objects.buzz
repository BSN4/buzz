import "zig-out/lib/libstd.dylib";

object First {
    str name = "Joe";
    num age = 10;

    fun sayHello() {
        print("hello");
        print(this.name);
    }
}

test "Objects" {
    First first = First {
        name = "John",
    };

    assert(first.name == "John", message: "object instance, field access");

    first.age = 21;
    assert(first.age == 21, message: "field assignment");

    first.sayHello();
}