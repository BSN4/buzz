import "lib/std";
import "lib/debug";

object Person {
    str name,
    int age = 30,

    static int population = 0;

    fun sayHello() > void {
        print("Hello I'm {this.name} and I'm {this.age}");
    }
}

test "object instance" {
    Person p = Person{
        name = "Joe"
    };

    dump(<Person>, p);
    print("{p.name} is {p.age} years old");

    p.sayHello();

    Function() > void f = p.sayHello;

    f();

    p.name = "John";

    print("His name is now {p.name}");

    print("Population is {Person.population}");

    Person.population = Person.population + 1;

    print("Population is now {Person.population}");
}