import "lib/std";
import "lib/gc" as gc;

object Kill {
    num yo = -1
}

test "GC, collecting unreferenced objects" {
    num i = 0;
    while (i < 100) {
        Kill{ yo = i }; | Should be collected since not referenced anywhere

        i = i + 1;
    }

    const num before = gc.allocated();

    gc.collect();

    assert(gc.allocated() <= before, message: "Garbage was collected");
}