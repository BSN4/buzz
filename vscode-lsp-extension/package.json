{
  "name": "buzz-vscode",
  "author": {
    "name": "Benoit Giannangeli",
    "url": "https://github.com/giann"
  },
  "publisher": "giann",
  "displayName": "Buzz Language Server for VSCode",
  "description": "VSCode frontend for buzz lsp",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "activationEvents": ["onLanguage:buzz"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "buzz.start",
        "title": "Start Server",
        "category": "Buzz Language Server"
      },
      {
        "command": "buzz.stop",
        "title": "Stop Server",
        "category": "Buzz Language Server"
      },
      {
        "command": "buzz.restart",
        "title": "Restart Server",
        "category": "Buzz Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Buzz Language Server",
      "properties": {
        "buzz.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "buzz.path": {
          "scope": "resource",
          "type": "string",
          "description": "Path to buzz lsp",
          "format": "path"
        }
      }
    },
    "languages": [
      {
        "id": "buzz",
        "extensions": [".buzz"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/mkdirp": "^1.0.2",
    "axios": "^0.27.2",
    "mkdirp": "^1.0.4",
    "vscode-languageclient": "8.0.2-next.5"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "vscode-test": "^1.3.0"
  }
}
