{
  "name": "buzz",
  "displayName": "buzz",
  "description": "Language support for buzz language",
  "version": "0.0.1",
  "publisher": "giann",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "buzz",
        "aliases": ["buzz", "buzz"],
        "extensions": ["buzz"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "buzz",
        "scopeName": "source.buzz",
        "path": "./syntaxes/buzz.tmLanguage.json"
      }
    ],
    "problemMatchers": [
      {
        "owner": "buzz",
        "fileLocation": ["autoDetect", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^([^:]+):(\\d+):(\\d+): (Syntax|Compile)? (error): (.*)+",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 5,
            "message": 6
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "buzz-compile",
        "title": "Compile buzz script",
        "shortTitle": "buzz compile"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  }
}
